    <script>
        
        
        // Comenzar

        const start = () => {
            setTimeout(function() {
                confetti.start()
            }, 1000);         };
           
            
        //  Stop

        const stop = () => {
            setTimeout(function() {
                confetti.stop()
            }, 5000); 
        };
        start();
        stop();
       
    </script>
